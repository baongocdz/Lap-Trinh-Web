@model List<CUOIKY.Repository.Models.User>

@{
    ViewBag.Title = "Quản lý người dùng";
}

<h2>Quản lý người dùng</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>UserId</th>
            <th>Quyền</th>
            <th>Tên đăng nhập</th>
            <th>Tên người dùng</th>
            <th>Số dư</th>
            <th>Gmail</th>
            <th>Ngày tạo</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.UserId</td>
                <td>@(user.RoleId == 1 ? "Admin" : "User")</td>
                <td>@user.UserName</td>
                <td>@user.UserNameString</td>
                <td>@(user.Balance?.ToString("#,##0") ?? "0") đ</td>
                <td>@user.Gmail</td>
                <td>@user.CreatedDate?.ToString("dd/MM/yyyy")</td>
                <td>
                    <a href="@Url.Action("EditUser", "Admin", new { id = user.UserId })" class="btn btn-primary btn-sm">Sửa</a>
                    <!-- Bạn có thể thêm nút Xóa nếu cần -->
                </td>
            </tr>
        }
    </tbody>
</table>
