@using CUOIKY.Models
@model RegisterViewModel

@{
    // Layout = "_LoginLayout";
    ViewData["Title"] = "Register";
}

<div class="container d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="card shadow-lg p-4" style="width: 100%; max-width: 400px; border-radius: 10px;">
        <h2 class="text-center mb-4" style="color: #000; font-weight: 600;">Register</h2>

        <!-- Hiển thị lỗi nếu có -->
        @if (!string.IsNullOrEmpty(ViewData["ErrorMessage"] as string))
        {
            <div class="alert alert-danger text-center">
                @ViewData["ErrorMessage"]
            </div>
        }

        <!-- Register Form -->
        <form asp-action="Register" method="post">
            <div class="form-group mb-3">
                <label class="form-label" style="color: #333;">Name</label>
                <input class="form-control" placeholder="Enter your name" required style="border-radius: 5px;" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="UserName" class="form-label" style="color: #333;">Username</label>
                <input asp-for="UserName" class="form-control" placeholder="Enter your username" required style="border-radius: 5px;" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Password" class="form-label" style="color: #333;">Password</label>
                <input asp-for="Password" type="password" class="form-control" placeholder="Enter your password" required style="border-radius: 5px;" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group mb-4">
                <label asp-for="ConfirmPassword" class="form-label" style="color: #333;">Confirm Password</label>
                <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirm your password" required style="border-radius: 5px;" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary w-100" style="border-radius: 5px; background-color: #007bff; border: none; font-weight: 600;">Register</button>
        </form>

        <!-- Links for additional actions -->
        <div class="text-center mt-3">
            <a href="/Account/Login" class="text-decoration-none" style="color: #007bff;">Already have an account? Login</a>
        </div>
    </div>
</div>
@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}


<style>
    body {
        background-color: #f9f9f9;
        font-family: Arial, sans-serif;
    }

    .card {
        background-color: #fff;
        border: none;
        border-radius: 10px;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
    }

    h2 {
        font-size: 1.5rem;
    }

    .form-control {
        border-radius: 5px;
        height: 40px;
        font-size: 14px;
    }

    .btn-primary {
        height: 40px;
        font-size: 14px;
        font-weight: 600;
        background-color: #007bff;
        transition: background-color 0.3s;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }

    .form-label {
        font-size: 14px;
        font-weight: 500;
    }

    a {
        font-size: 14px;
    }
</style>
