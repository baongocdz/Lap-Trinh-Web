@model IEnumerable<CUOIKY.Repository.Models.Order>

<div class="container my-5">
    <h2 class="text-center mb-4">Lịch sử giao dịch</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center">
            Bạn chưa có giao dịch nào.
        </div>
    }
    else
    {
        <table class="table table-bordered table-striped">
            <thead class="table-dark">
                <tr>
                    <th>Mã sản phẩm</th>
                    <th>Tài khoản</th>
                    <th>mật khẩu</th>
                    <th>Ngày mua</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model)
                {
                    <tr>
                        <td>@order.Product?.ProductId</td>
                        <td>@order.Product?.UserName</td>
                        <td>@order.Product?.Password</td>
                        <td>@order.CreatedDate?.ToString("dd/MM/yyyy HH:mm")</td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
